{% extends '::base.html.twig' %}

{% block body %}
    <h3>Books list</h3>
    <ul>
        {% for book in books %}
            <li>
                <strong>{{ book.author }} - {{ book.bookName }}</strong>

                <a href="{{ path('books_show',{'id':book.id}) }}">Show</a>&nbsp;
                <a href="{{ path('books_edit',{'id':book.id}) }}">Edit</a>&nbsp;
                <a href="{{ path('books_delete',{'id':book.id}) }}">Delete</a>
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('books_new') }}">Add new book</a>

{% endblock %}